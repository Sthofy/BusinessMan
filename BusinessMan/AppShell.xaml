<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="BusinessMan.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:BusinessMan.View"
       Shell.FlyoutBehavior="Disabled">


    <TabBar>
        <Tab Title="Business">
            <ShellContent Title="MainPage"
                          ContentTemplate="{DataTemplate local:MainView}"
                          Route="MainView" />
        </Tab>
        <Tab Title="Earnings">
            <ShellContent x:Name="MainPage"
                          Title="MainPage"
                          ContentTemplate="{DataTemplate local:MainView}"
                          Route="MainView" />
        </Tab>
    </TabBar>

</Shell>
